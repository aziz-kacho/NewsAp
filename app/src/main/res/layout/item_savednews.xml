<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="16dp"
        tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/imageAllRecommended"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_image_not_supported_24"
        />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/titleTextAllRecommended"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The area of Tajikistan is 143.100 square kilometers."
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCardView"
        android:fontFamily="sans-serif-black"
        android:padding="2dp"/>



    <TextView
        android:id="@+id/descriptionTextAllRecommended"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The area of Tajikistan is 143.100 square kilometers.The area of Tajikistan is 143.100 square kilometers."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="2dp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="@+id/imageCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextAllRecommended" />


    <TextView
        android:id="@+id/dateAllRecommended"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="14.02.2022"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextAllRecommended" />


</androidx.constraintlayout.widget.ConstraintLayout>